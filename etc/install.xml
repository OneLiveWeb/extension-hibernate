<?xml version="1.0" encoding="UTF-8"?>
<project name="entermedia-hibernate" basedir="." default="default" >

	<property name="dockerwebapp" location="/opt/entermediadb/webapp"/>
 	<property name="dockerlib" location="${dockerwebapp}/WEB-INF/lib"/>
	
  	<target name="default" depends="extend"/>
  
	<target name="extend">
	  	<echo>Reinstall Hibernate plugin(s)</echo>
	 	 <delete failonerror="false">
	       <fileset dir="${dockerwebapp}/WEB-INF/base/hibernate/"/>
	     </delete>
	     <copy todir="${dockerwebapp}/WEB-INF/base/hibernate" preservelastmodified="true">
	       <fileset dir="${basedir}/base/hibernate"/>
	     </copy>
	  	
	    <delete>
	      <fileset file="${dockerlib}/extension-hibernate-**.jar"/>
	    
	    </delete>
	  	
	    <copy todir="${dockerlib}" overwrite="false" preservelastmodified="true">
	      <fileset file="${basedir}/lib/**.jar"/>
	    </copy>
	</target>
</project>
